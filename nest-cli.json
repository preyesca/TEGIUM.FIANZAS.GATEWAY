{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "app/translation/i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "app/configuration/public/**/*",
        "watchAssets": true
      },
      {
        "include": "notifications/views/**/*",
        "watchAssets": true
      }
    ]
  }
}